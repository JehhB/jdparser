{
  "name": "jdparser",
  "version": "1.0.0",
  "description": "A parser for a simple toy markup language similar to markdown",
  "main": "dist/jdparser.min.js",
  "types": "dist/jdparser.min.d.ts",
  "scripts": {
    "test": "jest",
    "dev": "jest --watchAll",
    "build": "npm run test && rollup -c",
    "build:types": "tsc --declaration --emitDeclarationOnly --outfile 'dist/jdparser.min.js'",
    "prepare": "npm run build && npm run build:types"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JehhB/jdparser.git"
  },
  "keywords": [
    "parser",
    "markup"
  ],
  "author": "Jerico Wayne Bayod",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JehhB/jdparser/issues"
  },
  "homepage": "https://github.com/JehhB/jdparser#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/jest": "^29.4.0",
    "jest": "^29.4.3",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
